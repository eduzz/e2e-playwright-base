{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "declaration": true,
    "importHelpers": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "baseUrl": ".",
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}